package simply_linked_list;

import java.util.LinkedList;

public class MyLinkedList<E> {
	//-------------------------
	// dinh nghia lop Node ben trong lop MyLinkedList
	private class Node{
		private E info;
		private Node next;
		public Node(E info) 
		{
			this.info=info;
			this.next=null;
		}
		public Node(E info,Node next) 
		{
			this.info=info;
			this.next=next;
		}
	}
		//-----------------------------
		// Khai bao thuoc tinh cua lop MyLinkedList
		private Node head,tail;
		private int size;
		
		public MyLinkedList()
		{
			head=tail=null;
			size=0;
		}
		public void addLast(E element)
		{
			Node p = new Node(element);
			// danh sach rong
			if(head==null)
				head=tail=p;
		else
		{
			tail.next=p;
			tail=p;
		}
		size++;
		}
		// tinh tong
		public int sum() {
			int s=0;
			Node q=head;
			while(q!=null)
			{	
				s=s +(Integer)q.info;
				q=q.next;
			}
			return s;
		}
		@Override
		public String toString() {
			String s="";
			Node q = head;
			while(q!=null) {
				s= s+ q.info + " ";
				q=q.next;
			}
			return s;
		}
		// dem co bn gtri chan
		public int coutEven()
	    {
		int k=0;
		Node q= head;
		while(q!=null) {
			if((Integer)q.info%2==0) 
				k++; 
			q=q.next;
		}
		return k;
	    } 
		//ktra nguyen to
		public boolean isPrime(int x) {
			if(x<2)
				return false;
			for(int i=2;i<=Math.sqrt(x);i++)
				if(x%i==0) return false;
			return true;
		}
		// tinh trung binh cong so nguyen to
		public double averagePrime() {
			double s=0; int d=0;
			Node q=head;
			while (q!=null)
			{
				if((isPrime ((Integer)q.info))) {
					s=s+(Integer) q.info;
					d++;
				}
				q=q.next;
					
				}
				return (s/d);		
		}
		//in ra gia tri cua nut cuoi
		public E number() {
			Node q=head;
			while(q.next!=null) {
				q=q.next;
			}
			return q.info;
			
		}
		//in ra cac gia tri cua nut ke cuoi
		public void print1() {
			if(size<2)
				System.out.println("khong co gia tri ke cuoi");
			else
			{
				Node q= head;
				while (q.next!=tail)
					q=q.next;
			System.out.println(q.info);
			}
		}
		//dao hai node dau cho nhau
		public void reverse1() {
			Node q= head.next;
			if(size>=2){
				head.next=q.next;
				q.next=head;
				head=q;
			}
			if(size==2)
				tail=head;
		}
		//dao 2 gia tri cuoi cho nhau
		public void reverse2() {
			if(size==2)
				reverse1();
			if(size>=2) {
				Node q=head;
				while(q.next!=tail)
					q=q.next;
				Node r=head;
				while(r.next!=q)
					r=r.next;
				r.next=q.next;
				tail.next=q;
				q.next=null;
				tail=q;
			}
		}
		//dao node dau va node cuoi
		public void reverse3(){
			Node q= head;
			if(size>2)
				while(q.next!=tail)
					q=q.next;
			Node r = head.next;
			q.next=head;
			head.next=null;
			tail.next=r;
			head=tail;
			tail=q.next;
		}
		//dao nguoc mot danh sach
		public  void reverseList() {
			Node head1=null;
			Node q= head;
			Node r;
			while(q!=null) {
				r=q.next;
				q.next=head1;
				head1=q;
				q=r;
			}
			head=head1;
		}
		//tim gia tri co trong node khong
		public boolean contains(E e) {
			Node q= head;
			while (q!=null) {
				if(q.info==e)
					return true;
				q=q.next;
			}
			return false;
		}
		//dau tien
		public void removeFrist() {
			if(head==null) { 
				System.out.println("list is empty");
			}
			else {
				if(head==tail)
					head=tail=null;
				else {
				Node q= head.next;
				head.next= null;
				head=q;
				}
			size--;
			}
		}
		//cuoi cung
		public void removeLast() {
			if(head==null) {
				System.out.println("list is empty");
			}
	        else 
	            if(head==tail)  
	            	head= tail=null;
	            else
	            {
	                Node q= head;
	                while (q.next!=tail) 
	                	q=q.next;
	                q.next= null;
	                tail=q;
	            }	
			size--;
		}
		//them vao dau nut
		public void addFrist(E e) {
			Node q = new Node(e);
			// danh sach rong
			if(head==null)
				head=tail=q;
			else {
				q.next=head;
				head=q;
			}
			size++;
	
		}
		//xoa am
		public void removeA() {
			while((Integer)head.info < 0){
				head = head .next;
				size--;
			}
			while((Integer)tail.info < 0){
				Node q = head;
				while(q.next != tail){
					q = q.next;
				}
				q.next = null;
				tail = q;
				size--;
			}
			Node q = head.next;
			Node r = head;
			while(q!=null){
				if((Integer)q.info<0){
					q = q.next;
					size--;
				}
				else	
				{
					r.next = q;
					q = q.next;
				}
			}
			tail = r;
		}
		public E get(int index) {
			if(index<0|| index>=size) {
				System.out.println("invalid index");
				return null;
			}
			else {
				int i=0;
				Node q= head;
				while(i<index) {
					q=q.next;
					i++;
				}
				return q.info;
			}
		}
		public void set(int index, E e) {
			if(index<0||index>=size)
				System.out.println("invalid index");
			else {
				Node q= head;
				for(int i=0;i<index;i++)
					q=q.next;
				q.info=e;
			}
		}
		public void add(int index, E e) {
			if(index<0||index>size)
				System.out.println("invalid index");
			else {
				if(index==0) {
					addFrist(e);
				}
				else {
					if(index==size) {
						addLast(e);
					}
					else {
						Node q= head;
						for(int i=0;i<index;i++)
							q=q.next;
						Node r= head;
						while(r.next!=q)
							r=r.next;
						Node p= new Node(e);
						r.next=p;
						p.next=q;
						size++;
					}
				}
			}
		}
		public void remove(int index) {
			if(index<0||index>=size) {
				System.out.println("invalid index");
			}
			else {
				if(index==0) {
					removeFrist();
				}
				else {
					if(index==size-1) {
						removeLast();
					}
					else {
						Node q=head;
						for(int i=0;i<index;i++)
							q=q.next;
						Node r=head;
						while(r.next!=q)
							r=r.next;
						q.next=null;
						r.next=q;
						size--;
					}
				}
			}
		}
	public static void main(String[] args) {
		MyLinkedList<Integer> list= new MyLinkedList<Integer>();
		list.addLast(-8);
		list.addLast(3);
		list.addLast(-9);
		list.addLast(7);
		list.addLast(6);
		System.out.println(list.toString());
//		System.out.println(list.sum());
//		System.out.println(list.coutEven());
//		System.out.println(list.averagePrime());
//		System.out.println(list.number());
//		list.print1();
//		list.reverse1();
//		System.out.println(list.toString());
//		list.reverse2();
//		System.out.println(list.toString());
//		list.reverse3();
//		System.out.println(list.toString());
//		System.out.println(list.contains(2));
//		list.removeFrist();
//		System.out.println(list.toString());
//		list.removeLast();
//		System.out.println(list.toString());
//		list.reverseList();
//		System.out.println(list.toString());
//		list.addFrist(3);
//		System.out.println(list.toString());
//		list.removeA();
//		System.out.println(list.toString());
//		list.remove(1);
		list.add(4, 4);
		System.out.println(list.toString());
		
	}
}
